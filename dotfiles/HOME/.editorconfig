# http://editorconfig.org
root=true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,java,py}]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.{yaml,yml,json,html,vue,js,css}]
indent_style = space
indent_size = 2
